
<%= form_for @order, :url => orders_done_path do |f| %>
<h2>確認</h2>
<p>トラックのナンバー：<%= f.hidden_field :truck %><%= @order.truck %></p>
<p>日付：<%= f.hidden_field :date %><%= @order.date %></p>
<p>コンテナ番号：<%= f.hidden_field :cntr_number %><%= @order.cntr_number %></p>
<p>時間帯：<%= f.hidden_field :slot_id %><%= @order.slot.begin_time %>から<%=@order.slot.end_time%></p>
<p>Booking番号：<%= f.hidden_field :booking %><%= @order.booking %></p>
<p>
種別：<%= f.hidden_field :purpose %>
<%= "空バンPICK" if @order.purpose == 1 %>
<%= "実入り搬入" if @order.purpose == 2 %>
<%= "実入り搬出" if @order.purpose == 3 %>
</p>
<%= f.submit '戻る', name: 'back' %>
<%= f.submit '確定する'%>
<% end %>


